{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["es6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test", "node"],
    "strict": true,
  },
  "include": [
    "test/**/*.ts",
    "utils/**/*.ts",
    "test-data/**/*.ts",
    "playwright.config.ts",
  ],
}

  